<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:orientation="vertical"
	android:padding="10dp"
	android:background="@drawable/back03" >
	<EditText android:id="@+id/feedback_edit_text"
		android:background="@drawable/new_edittext_bg"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="top" android:textSize="16sp"
		android:minLines="5" android:focusable="true"
		android:minHeight="24dip"
		android:maxLength="32"
		android:layout_marginBottom="10dip"
		android:focusableInTouchMode="true" android:isScrollContainer="false"
		android:layout_weight="1"
		android:layout_marginLeft="10dip" android:layout_marginRight="10dip"
		android:padding="4dip" android:autoText="true" android:capitalize="sentences"
		android:hint="请输入您的自定义短语" 
		android:inputType="textShortMessage|textAutoCorrect|textCapSentences|textMultiLine"/>

	<TextView
	    android:id="@+id/feedback_counter"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginRight="10dip"
	    android:gravity="right"
	    android:text="0/32"
	    android:textColor="#000000"
	    android:textSize="14sp" />
		
	<LinearLayout 
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="right" android:padding="10dip">
		<Button android:id="@+id/btnSend"
		    style="@style/StyleButtonGeneralSmall"
			android:layout_width="80dip" android:layout_height="36dip"
			android:text="保存" android:layout_marginRight="5dip" />
		<Button android:id="@+id/cancel"
		     style="@style/StyleButtonGeneralSmall"
			android:layout_width="80dip" android:layout_height="36dip"
			android:text="取消"/>
	</LinearLayout>
</LinearLayout>	

