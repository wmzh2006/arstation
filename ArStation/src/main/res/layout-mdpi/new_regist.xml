<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/new_chart_bg"
    >

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@drawable/btmck" >

        <LinearLayout
            android:id="@+id/lltest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="帐         号:"
                android:textSize="18sp" 
            	android:textColor="#ffffff"
            	android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
				/>
            <EditText
                android:id="@+id/etaccount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_text_bg"
                android:ems="10"
                android:hint="@string/Input_Hint_ID"
                android:inputType="number"
                android:maxLength="12"
                android:textSize="18sp" 
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
		        android:textColorHint="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密         码:"
                android:textSize="18sp" 
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                />

            <EditText
                android:id="@+id/etpswd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_text_bg"
                android:ems="10"
                android:hint="@string/Input_Hint_Password"
                android:inputType="textPassword"
                android:maxLength="30"
                android:password="true"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密 码:"
                android:textSize="18sp" 
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                />

            <EditText
                android:id="@+id/etpswdsecond"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_text_bg"
                android:ems="10"
                android:hint="@string/Input_Hint_Password_Confirm"
                android:inputType="textPassword"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="问         题:"
                android:textSize="18sp" 
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                />

            <Button
                android:id="@+id/btnSelectQ"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_spinner"
                android:textSize="18sp" 
                android:textColor="#ffffff"
                android:gravity="left"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="答         案:"
                android:textSize="18sp" 
                android:textColor="#ffffff"
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                />

            <EditText
                android:id="@+id/etAnser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/new_text_bg"
                android:hint="输入密保答案"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:maxLines="6"
                android:textSize="18sp" 
                android:shadowColor="@color/black"
		        android:shadowDx="2.0"
		        android:shadowDy="2.0"
		        android:shadowRadius="2.0"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btncommit"
            style="@style/StyleButtonGeneralSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="提交验证"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>