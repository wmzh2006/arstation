<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llbookviproom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/glass0"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView android:id="@+id/tvresetpwdti"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="设置找回密码问题"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="20sp"/>
        <Button android:id="@+id/btnSelectQ"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_spinner"
            android:text="设置找回密码问题"
            android:layout_marginBottom="5dp"
            android:gravity="left"
            android:textColor="@color/white"
            android:textSize="20sp"/>
         <EditText android:id="@+id/etAnser"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="输入密保答案"
            android:layout_marginBottom="5dp"
            android:background="@drawable/new_text_bg"
            android:textColor="@color/white"
            android:textSize="20sp"/>
           <EditText android:id="@+id/etpswd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:inputType="textPassword"
            android:hint="输入新密码"
            android:background="@drawable/new_text_bg"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"/>
            <EditText android:id="@+id/etpswdsecond"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:hint="再次输入新密码"
            android:background="@drawable/new_text_bg"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"
            android:textSize="20sp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btncommit"
                style="@style/StyleButtonGeneralSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/btncancel"
                android:text="确定"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btncancel"
                style="@style/StyleButtonGeneralSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_alignParentRight="true"
                android:text="取消"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>